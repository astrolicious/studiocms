{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:earlyMondays"
  ],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "packages/ghost-to-studio/package.json"
  ],
  "labels": [
    "dependencies"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "gitIgnoredAuthors": [
    "github+renovate@astro-studiocms.xyz"
  ],
  "prHourlyLimit": 3,
  "rangeStrategy": "bump",
  "reviewers": [
    "team:exalted"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "@biomejs/"
      ],
      "labels": [
        "linting",
        "dependencies"
      ]
    },
    {
      "matchPackagePatterns": [
        "^astro"
      ],
      "labels": [
        "astroDependencies",
        "dependencies"
      ]
    },
    {
      "matchPackagePatterns": [
        "^@astrojs"
      ],
      "labels": [
        "astroDependencies",
        "dependencies"
      ]
    },
    {
      "matchDepTypes": [
        "packageManager",
        "engines"
      ],
      "labels": [
        "dependencies"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        "www/**"
      ],
      "labels": [
        "websiteDeps",
        "dependencies"
      ]
    },
    {
      "matchFileNames": [
        "packages/**"
      ],
      "labels": [
        "packageDeps",
        "dependencies"
      ]
    },
    {
      "matchFileNames": [
        "playgrounds/**"
      ],
      "labels": [
        "playgroundDeps",
        "dependencies"
      ]
    }
  ]
}
