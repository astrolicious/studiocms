---
import './Checkbox.css';

import Icon from '../../utils/Icon.astro';
import type { StudioCMSColorway } from '../../utils/colors';
import { generateID } from '../../utils/generateID';

type Props = {
	label: string;
	size?: 'sm' | 'md' | 'lg';
	color?: StudioCMSColorway;
	defaultChecked?: boolean;
	disabled?: boolean;
	name?: string;
	isRequired?: boolean;
};

const {
	size = 'md',
	color = 'default',
	defaultChecked,
	disabled,
	name = generateID('checkbox'),
	label,
	isRequired,
} = Astro.props;

const iconSizes = {
	sm: 14,
	md: 16,
	lg: 24,
};
---
<label 
  class="checkmark-label"
  for={name}
  class:list={[
    disabled && "disabled",
    color,
    size,
  ]}
>
  <div class="checkmark-container">
    <Icon
      name='checkmark'
      class={'checkmark'}
      width={iconSizes[size]}
      height={iconSizes[size]}
    />
    <input
      type="checkbox"
      name={name}
      id={name}
      checked={defaultChecked}
      disabled={disabled}
      required={isRequired}
      class="checkbox"
    />
  </div>
  <span>
    {label} <span class="req-star">{isRequired && "*"}</span>
  </span>
</label>