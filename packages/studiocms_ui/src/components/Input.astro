---
type Props = {
  label?: string;
  type?: 'text' | 'password';
  placeholder?: string;
};

const { 
  label,
  type = 'text',
  placeholder,
} = Astro.props;
---

<label for={`input-${label}`} class="input-label">
  <span class="label">{label}</span>
  <input
    placeholder={placeholder}
    name={`input-${label}`}
    id={`input-${label}`}
    type={type}
    class="input"
  />
</label>
<style>
  .input-label {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: .25rem;
    margin-top: .5rem;
  }

  .label {
    font-size: 14px;
  }

  .input {
    padding: .65rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--border);
    background: var(--background-step-2);
    color: var(--text-normal);
  }

  .input:active, .input:focus {
    border: 1px solid var(--primary-base);
    outline: none;
  }
</style>