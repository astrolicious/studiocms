---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import { ViewTransitions } from "astro:transitions";
import ThemeManager from "../components/ThemeManager.astro";

// TO BE ENABLED AT LATER DATE
// import Config from "virtual:studiocms/config";
// const { dashboardConfig: { dashboardRouteOverride } } = Config;
// const DashboardRouteOverride = dashboardRouteOverride;

type Props = {
  title: string;
  description: string;
  includeSidebar?: boolean;
  sideBarActiveItemID: string;
};

const {
  title,
  description,
  sideBarActiveItemID,
} = Astro.props;

const TRANSITION_API = false;
const DashboardRouteOverride = undefined; // TO BE ENABLED AT LATER DATE

---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <ThemeManager defaultTheme="auto" />
    <BaseHead title={title} description={description} />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <!-- <input id="my-drawer" type="checkbox" class="drawer-toggle" /> -->
      <div class="drawer-content bg-base-100">
        <Header DashboardRouteOverride={DashboardRouteOverride}/>
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[1800px] max-w-[100vw]">
            <slot />
          </main>
        </div>
        <Footer />
      </div>
      <SideBar sideBarActiveItemID={sideBarActiveItemID} DashboardRouteOverride={DashboardRouteOverride}/>
    </div>
  </body>
</html>