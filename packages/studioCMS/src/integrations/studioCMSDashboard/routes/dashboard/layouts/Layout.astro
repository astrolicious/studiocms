---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import ThemeManager from "../components/ThemeManager.astro";
import Config from "virtual:studiocms/config";
import { studioCMSSocials } from "./studiocms-socials";
import { ShoelaceHeader } from "astrolace:components/header"
import "@matthiesenxyz/astrolace/base.css";
import "@matthiesenxyz/astrolace/dark.css";

const socialLinks = studioCMSSocials;

const { 
  dashboardConfig: { 
    UnoCSSConfigOverride: {
      presetsConfig: {
        presetDaisyUI: {
          lightTheme,
        }
      }
    },
    developerConfig: {
      viewTransitionAPI
    },
  } 
} = Config;

type Props = {
  title: string;
  description: string;
  includeSidebar?: boolean;
  sideBarActiveItemID: string;
};

const {
  title,
  description,
  includeSidebar = true,
} = Astro.props;

---

<!doctype html>
<html lang="en" data-theme={lightTheme}>
  <head>
    <ThemeManager defaultTheme="auto" />
    <BaseHead title={title} description={description} />
    <ShoelaceHeader />
    {viewTransitionAPI && (
      <style>
        @view-transition {
          navigation: auto; /* enabled! */
        }
      </style>
    )}
  </head>
  <body>
    <div class="bg-base-100 drawer">
      <div class="drawer-content bg-base-100">
        <Header studioCMSSocials={socialLinks}/>
          <main class="p-6 pt-10">
            <slot />
          </main>
        <Footer studioCMSSocials={socialLinks}/>
      </div>
      { includeSidebar && <SideBar studioCMSSocials={socialLinks}/>}
    </div>
  </body>
</html>
