---
import { IconButton } from "astrolace:components";
import type { StudioCMSSocials } from "../layouts/studiocms-socials";
import githubLogo from "../../../assets/github-logo.svg";

type Props = { studioCMSSocials: StudioCMSSocials };
const { studioCMSSocials: { github: githubURL } } = Astro.props as Props;

---
<div class="block sticky pointer-events-none bottom-10 bg-base-200 justify-center h-12 [mask-image:linear-gradient(transparent,#000000)]"></div>

<div class="social-icons px-4 pb-5 pt-1 flex self-center justify-center sticky bottom-0 bg-base-200">
    <IconButton 
    src={githubLogo.src}
    style="font-size: 24px;" 
    class="flex-center"
    label="StudioCMS Github" 
    href={githubURL} 
    target="_blank"/>
</div>