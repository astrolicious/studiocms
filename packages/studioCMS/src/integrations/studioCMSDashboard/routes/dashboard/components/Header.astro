---
import { urlGenFactory } from "studiocms:helpers"

const siteURL = await urlGenFactory(false, undefined)
---
<div
  class="sticky lg:hidden top-0 z-30 flex h-16 w-full justify-center bg-opacity-90 backdrop-blur transition-all duration-100 bg-base-100 text-base-content shadow-sm"
>
  <div class="navbar">
    <div class="navbar-start"> </div>
    <div class="navbar-center">
      <a class="btn btn-ghost normal-case text-xl" href={siteURL}>Back to site</a>
    </div>
    <div class="navbar-end"> </div>
  </div>
</div>