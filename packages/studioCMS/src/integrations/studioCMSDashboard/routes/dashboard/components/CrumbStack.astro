---
import { Breadcrumb, BreadcrumbItem, Icon } from 'astrolace:components';
import columnsGap from '../../../assets/columns-gap.svg';
import chevronRight from '../../../assets/chevron-right.svg';

interface Props {
    items: Array<{
        href: string;
        text: string;
    }>;
    isDashboard: boolean;
}

const { items, isDashboard } = Astro.props;
---


<div class="flex grow w-full pb-4 items-center">
    {isDashboard && <Icon src={columnsGap.src} class="px-2" />}
    <Breadcrumb separatorSrc={chevronRight.src}>
        {
            items.map(({ href, text }) => (
                    <BreadcrumbItem href={href}>
                        {text}
                    </BreadcrumbItem>
                ))
        }
    </Breadcrumb>
</div>