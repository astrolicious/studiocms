---
interface Props {
	title: string;
}

const { title } = Astro.props;
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} {title}. All rights reserved.
</footer>

<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
</style>