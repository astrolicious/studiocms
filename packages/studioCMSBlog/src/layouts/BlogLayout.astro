---
import config from "studiocms-blog:config";
import { FrontLayout } from "studiocms:components";

type Props = {
    title: string;
    description: string;
	lang?: string|undefined;
	heroImage?: string;
	siteTitle?: string;
	siteDescription?: string;
	pageTitleDelimiter?: string;
	pageDescriptionDelimiter?: string;
}

const { 
    title, 
    description, 
    heroImage, 
    lang,
    pageDescriptionDelimiter, 
    pageTitleDelimiter, 
    siteDescription = config.description, 
    siteTitle = config.title 
} = Astro.props;

---

<FrontLayout 
    {title} 
    {description} 
    {siteTitle} 
    {siteDescription}
    {lang}
    {heroImage} 
    {pageDescriptionDelimiter} 
    {pageTitleDelimiter} 
    >
    <slot />
</FrontLayout>