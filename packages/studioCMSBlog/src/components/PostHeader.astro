---
import { CustomImage, FormattedDate } from 'studiocms:components'

interface Props {
    title: string
    publishedAt: Date
    updatedAt?: Date|null
    heroImage: string
    description: string
}

const { title, description, heroImage, publishedAt, updatedAt } = Astro.props;

---
<h1 class="title">{title}</h1>

<div style="text-align: center;">
	<CustomImage src={heroImage} alt={title} width={720} height={360}/>
	<div>
		<p class="date">Published: <FormattedDate date={publishedAt}/></p>
		{updatedAt && <p class="date"> | Last Updated: <FormattedDate date={updatedAt}/></p>}
	</div>
	<p class="description">{description}</p>
</div>

<style>
	.title {
		margin: 0;
		color: rgb(var(--black));
        font: bold;
        font-weight: bold;
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
        font: normal;
        line-height: normal;
        display: inline;
	}
	.description {
		margin: 0;
		color: rgb(var(--gray));
        width: 720px;
	}
</style>