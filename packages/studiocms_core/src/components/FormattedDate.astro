---
import Config from 'virtual:studiocms/config';

const { dateLocale: locales } = Config;

interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locales, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
