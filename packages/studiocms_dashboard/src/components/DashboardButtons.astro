---
import { Button, Icon } from 'astrolace:components';
import discordLogo from '@studiocms/assets/svgs/discord.svg';
import starIcon from '@studiocms/assets/svgs/star.svg';
import { studioCMSSocials } from '@studiocms/core';
import BetaFeedback from './BetaFeedback.astro';

const { github, discord } = studioCMSSocials;
---
<div class="mt-8 flex flex-wrap gap-4">
    <Button variant="warning" size="large" href={github} target="_blank" outline>
        <Icon slot="prefix" src={starIcon.src} />
        <div>Star us on Github</div>
    </Button>
    <Button variant="primary" size="large" href={discord} target="_blank" outline>
        <Icon slot="prefix" src={discordLogo.src} />
        Join the Community
    </Button>
    <BetaFeedback />
</div>