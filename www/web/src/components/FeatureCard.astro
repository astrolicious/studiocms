---
import { Icon } from 'astro-icon/components';

interface Props {
	feature: string;
	description: string;
	icon: string;
}

const { icon, description, feature } = Astro.props;
---

<div
  class='animate-border rounded-lg border border-transparent [background:linear-gradient(45deg,#aa87f4,theme(colors.slate.400)_50%,#aa87f4)_padding-box,conic-gradient(from_var(--border-angle),theme(colors.slate.400/.48)_80%,_theme(colors.indigo.600)_86%,_theme(colors.indigo.300)_90%,_theme(colors.indigo.600)_94%,_theme(colors.slate.400/.48))_border-box] dark:[background:linear-gradient(45deg,#172033,theme(colors.slate.800)_50%,#172033)_padding-box,conic-gradient(from_var(--border-angle),theme(colors.slate.600/.48)_80%,_theme(colors.indigo.500)_86%,_theme(colors.indigo.300)_90%,_theme(colors.indigo.500)_94%,_theme(colors.slate.600/.48))_border-box]'
>
  <div class='h-full place-self-center rounded-lg bg-slate-200 dark:bg-[--purple-900] p-6 md:p-8'>
    <div class='flex items-center justify-start gap-3 pb-4'>
      <Icon
        name={icon}
        class='h-8 w-8 stroke-black stroke-[0.1px] text-[--purple-900] dark:text-white'
      />
      <span class="text-xl font-bold">{feature}</span>
    </div>
    <p>
      {description}
    </p>
  </div>
</div>
