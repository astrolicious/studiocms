---
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

interface Props {
	title?: string;
	desc?: string;
	ogImage?: string;
}

const { title, desc, ogImage } = Astro.props;

let OgImage: URL | undefined = undefined;
if (ogImage) {
	OgImage = new URL(ogImage, Astro.url.origin);
}
---

<html
  class='scrollbar scrollbar-thumb-white scrollbar-track-[#1a172e] text-[--purple-900] dark:text-[--white-50]'
  lang='en'
>
  <Head {title} {desc} ogImage={OgImage}/>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
