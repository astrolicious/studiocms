---
import { Row, Select } from '@studiocms/ui/components';
---
<Row>
  <Select
    label='Required Select'
    options={[
      { label: "Option 1", value: "opt-1-1" },
      { label: "Option 2", value: "opt-2-1" },
      { label: "Option 3", value: "opt-3-1" },
    ]}
    isRequired
  />
  <Select
    label='Select with default value'
    options={[
      { label: "Option 1", value: "opt-1-2" },
      { label: "Option 2", value: "opt-2-2" },
      { label: "Option 3", value: "opt-3-2" },
    ]}
    defaultValue='opt-1-2'
  />
  <Select
    label='Select with disabled options'
    options={[
      { label: "Option 1", value: "opt-1-3" },
      { label: "Option 2", value: "opt-2-3", disabled: true },
      { label: "Option 3", value: "opt-3-3", disabled: true },
    ]}
  />
  <Select
    label='Disabled Select'
    options={[
      { label: "Option 1", value: "opt-1-4" },
      { label: "Option 2", value: "opt-2-4" },
      { label: "Option 3", value: "opt-3-4" },
    ]}
    disabled
  />
</Row>
<Select
  class='mt'
  label='Full width select'
  options={[
    { label: "Option 1", value: "opt-1-5" },
    { label: "Option 2", value: "opt-2-5" },
    { label: "Option 3", value: "opt-3-5" },
  ]}
  fullWidth
/>