---
import DoubleSidebarLayout from '@/layouts/DoubleSidebarLayout.astro';
import Icon from '@/utils/Icon.astro';
import { Button } from '@studiocms/ui/components';
---

<DoubleSidebarLayout
  title="Double Sidebar"
  description="Double Sidebar"
>
  <Button variant="outlined" color="primary" class="nav-toggle" id={'nav-open'}>
    <Icon name="hamburger" height={24} width={24} />
  </Button>
  Site Content
</DoubleSidebarLayout>
<script>
  import { DoubleSidebarHelper } from "@studiocms/ui/components";

  const doubleSidebar = new DoubleSidebarHelper();

  doubleSidebar.showInnerOnClick('nav-open')
  doubleSidebar.showInnerOnClick('show-inner');
  doubleSidebar.showOuterOnClick('nav-back');
  doubleSidebar.hideSidebarOnClick('to-content');
</script>
<style>
  .nav-toggle {
    position: absolute !important;
    top: 1rem !important;
    left: 1rem !important;
    display: none !important;
  }

  @media screen and (max-width: 840px) {
    .nav-toggle {
      display: flex !important;
    }
  }
</style>